---
layout: layouts/wrapper.njk
title: Archive
description: All the posts
---

<section id="writing">
    <h2 class="section-heading">Writing</h2>
    <ul class="post-list">
        {%- for post in collections.post | reverse -%}
        <li class="post-item">
            <div class="meta">
                <time datetime="{{ post.data.date.toISOString() }}" itemprop="datePublished">{{ post.data.date.toShortFormat() }}</time>
            </div>
            <span>
                <a href="{{ post.url}}">{{ post.data.title }}</a>
            </span>
        </li>
        {%- endfor -%}
    </ul>
</section>