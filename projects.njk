---
layout: layouts/wrapper.njk
title: Projects
description: All the projects
---

<section id="projects">
    <h2 class="section-heading">Projects</h2>
    <ul class="project-list">
        {%- for post in collections.project | reverse -%}
        <li class="project-item">
            <a href="{{ post.url}}">{{ post.data.title }}</a>: <p>{{ post.data.description }}</p>
        </li>
        {%- endfor -%}
    </ul>
</section>